function ofed_feature_solr_schema() {

}

/**
 * Implements hook_install().
 */
function ofed_feature_solr_install() {
  // If the related feature is not enabled.
  if (!module_exists('ofed_solr')) {
    // Enable it.
    module_enable(array('ofed_solr'));
  }
}

/**
 * Implements hook_uninstall().
 */
function ofed_feature_solr_uninstall() {
  // If the related feature is enabled.
  if (module_exists('ofed_solr')) {
    // Disable it.
    module_disable(array('ofed_solr'));
  }
}